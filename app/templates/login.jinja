{% extends "base.jinja" %}

{%block content%}
<h2>Log in</h2>
  <form action="" method="POST">
        {{ login_form.hidden_tag() }}
    <p>
    {{ login_form.username.label }} <br>
    {{ login_form.username(size=32) }}
    </p>

    <p>
    {{ login_form.password.label }} <br>
    {{ login_form.password(size=32) }}

    </p>
    <p>
        {{ login_form.remember_me() }} {{ login_form.remember_me.label }}
    </p>
    <p>
    {{login_form.submit(class='btn btn-primary') }}
    </p>

    </form>

{%endblock%}